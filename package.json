{
  "name": "vitrine-isolated",
  "version": "1.0.0",
  "description": "Isolated Vitrine Astro application",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter vitrine dev",
    "build": "pnpm --filter vitrine build",
    "preview": "pnpm --filter vitrine preview",
    "check": "pnpm --filter vitrine check",
    "sync": "pnpm --filter vitrine sync",
    "lint": "pnpm --filter vitrine lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r exec tsc --noEmit",
    "clean": "pnpm -r exec rm -rf dist node_modules .astro",
    "install:all": "pnpm install"
  },
  "workspaces": [
    "vitrine",
    "libs/i18n",
    "libs/ui/common",
    "libs/ui/shadcn"
  ],
  "devDependencies": {
    "@types/node": "^22.10.5",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
