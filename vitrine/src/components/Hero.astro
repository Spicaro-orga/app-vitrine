---
import ImageShadow from './common/ImageShadow.astro'
import { useTranslations } from '../i18n/translator'
import { getLocale } from 'astro-i18n-aut'
import SearchComponent from './common/search-from/SearchComponent'

const locale = getLocale(Astro.url)

const { t } = useTranslations(locale)
---

<main class="container mx-auto my-auto flex flex-col md:my-0 md:flex-row">
  <section
    class="mx-auto flex flex-col justify-center gap-4 text-center md:basis-1/2 md:text-left landscape:md:max-w-[50%]"
  >
    <h1 class="p-1 font-heading text-5xl md:whitespace-nowrap">
      {t('home.title')}
    </h1>
    <p
      class="mx-auto p-2 px-11 text-lg md:px-0"
      set:html={t('home.description')}
    />

    <!-- <div class="px-11 md:w-11/12 md:px-0">
      <SearchComponent locale={locale} client:load />
    </div> -->
  </section>
  <section class="relative mx-auto">
    <ImageShadow>
      <img src="/home-page/hp_visuel.jpg" alt="Spicaro" loading="lazy" />
    </ImageShadow>
  </section>
</main>
