---
import Founder from '../components/Founder.astro'
import ImageShadow from '../components/common/ImageShadow.astro'
import TitleWithUnderline from '../components/common/TitleWithUnderline.astro'
import Layout from '../layouts/Layout.astro'

import SectionWithTitle00 from '../components/common/SectionWithTitle00.astro'

import { useTranslations } from '../i18n/translator'
import { getLocale } from 'astro-i18n-aut'
const locale = getLocale(Astro.url)
const { t, l, tList } = useTranslations(locale)
const founders = tList('company.founders')
---

<Layout title="Spicaro">
  <main class="flex flex-col">
    <header class="relative mx-auto overflow-hidden">
      <ImageShadow>
        <img
          src="/company-page/societe_visuel.jpg"
          alt="Flowers"
          loading="lazy"
          decoding="async"
          width="1920"
          height="1080"
          class="w-fit md:h-[30rem]"
        />
      </ImageShadow>

      <SectionWithTitle00 title={t('company.title')}>
        <p slot="left-text">
          {t('company.description.part1')}
          <strong>{t('company.description.part2')}</strong>
          {t('company.description.part3')}
        </p>
        <p slot="right-text">
          {t('company.description.part4')}
          <strong>{t('company.description.part5')}</strong>
        </p>
      </SectionWithTitle00>
    </header>

    <!-- section 01 -->
    <section class="container mx-auto p-4 px-8 pt-8 md:px-0">
      <div
        aria-labelledby="benefits-heading"
        class="flex flex-col md:gap-4 md:pt-40"
      >
        <TitleWithUnderline
          title={t('company.title01')}
          number="01"
          center={false}
          width="md:max-w-[40ch]"
          variant="h2"
          size="text-4xl"
        />

        <p class="pb-4 md:max-w-5xl">{t('company.description01.part1')}</p>
      </div>

      <p class="pb-8 md:max-w-5xl">
        {t('company.description01.part2')}
      </p>
      <p class="pb-8 md:max-w-5xl">
        {t('company.description01.part3')}
      </p>
      <p class="pb-8 md:max-w-5xl md:pb-24">
        {t('company.description01.part4')}
      </p>
    </section>

    <!-- section 02 -->
    <section
      id="vision"
      aria-labelledby="vision-heading"
      class="container mx-auto flex flex-col px-8 pt-8 md:px-0"
    >
      <header>
        <TitleWithUnderline
          title={t('company.title02')}
          number="02"
          size="text-5xl"
          variant="h2"
        />

        <p
          class="mx-auto font-heading text-3xl md:w-10/12 md:p-4 md:text-center"
        >
          {t('company.subtitle02')}
        </p>
      </header>

      <div
        class="grid w-full py-4 md:grid-cols-2 md:gap-12 md:p-4 md:pt-16 md:text-sm"
      >
        <p class="mb-4 md:px-6">
          {t('company.description02.part1')}
        </p>
        <p class="mb-4">
          {t('company.description02.part2')}
        </p>
      </div>
    </section>

    <!-- section 03 -->
    <section
      id="founders"
      aria-labelledby="founders-heading"
      class="container mx-auto px-4 pb-16 pt-8 md:px-0"
    >
      <TitleWithUnderline
        title={t('company.title03')}
        number="03"
        size="text-5xl"
        variant="h2"
        centerMobile={true}
      />
      {
        founders.map((founder) => (
          <Founder
            image={founder.image}
            firstName={founder.firstName}
            lastName={founder.lastName}
          >
            {/* @ts-ignore */}
            <founder.description />
          </Founder>
        ))
      }
    </section>
  </main>
</Layout>
