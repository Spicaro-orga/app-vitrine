---
import '../assets/base.css'
import Footer from '@spicaro/vitrine/components/common/Footer.astro'

import { ViewTransitions } from 'astro:transitions'
import ClarityAnalytics from '../components/common/ClarityAnalytics.astro'
import Header from '../components/common/Header.astro'

import { SEO } from 'astro-seo'
---

<!doctype html>
<html lang="en" class="h-full min-w-fit bg-black">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <ClarityAnalytics />

    <SEO
      title="Spicaro"
      description="Explore Spicaro, an innovative high-end service that unifies physical artworks with their digital twins. Discover galleries, artists, and the world of Art like never before."
      openGraph={{
        basic: {
          title: 'Spicaro',
          type: 'website',
          image: '/open-graph.png',
          url: 'https://www.spicaro.fr',
        },
        optional: {
          locale: 'fr-FR',
          localeAlternate: ['fr_FR', 'en_US'],
          siteName: 'Spicaro',
        },
      }}
    />

    <script is:inline defer>
      function adjustFontSizeForElement() {
        const cookieConsent = document.querySelector('.cm-wrapper')

        if (cookieConsent) {
          // Element found, set its font size
          cookieConsent.style.fontSize = '1rem'
        }
      }

      document.addEventListener('DOMContentLoaded', adjustFontSizeForElement)
    </script>
    <ViewTransitions />
  </head>

  <body
    class="flex h-screen flex-col bg-black font-body text-white md:justify-between"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
